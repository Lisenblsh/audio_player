<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Audio_player" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="Theme.Audio_player.Icons_tint" parent="Theme.Audio_player">
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:thumbTint">?attr/colorPrimary</item>
        <item name="android:progressTint">?attr/colorPrimary</item>
        <item name="android:secondaryProgressTint">@color/grey_progress_night</item>
    </style>
</resources>